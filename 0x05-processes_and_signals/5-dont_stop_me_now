#!/usr/bin/env bash
# This script kills a process containing the word "beyond" in its command line

# Find the process ID(s) of the process(es) containing the word "beyond"
process_ids=$(ps aux | grep -v grep | grep -e "[b]eyond" | awk '{print $2}')

# Check if any process IDs were found
if [ -n "$process_ids" ]; then
    # Loop through each process ID and kill it
    for pid in $process_ids; do
        echo "Killing process with ID: $pid"
        kill "$pid"
    done
else
    echo "No processes containing 'beyond' found."
fi
